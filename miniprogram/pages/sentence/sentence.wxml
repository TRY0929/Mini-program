<view class="container">
    <view class="header">
        <v-episode
            index="{{latest.index}}"
            class="episode"
            bind:clock="onClock"
        ></v-episode>
        <view class="like-container">
            <v-like
                    like="{{likeStatus}}"
                    count="{{likeCount}}"
                    bind:like="onlike"
                    class="like"
            ></v-like>
            <v-button
                    open-type="share"
                    class="share-btn"
            >
                <image class="share" src="/images/icon/share.png"></image>
            </v-button>
        </view>
    </view>
</view>
